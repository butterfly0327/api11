<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yumyumcoach.domain.ai.chat.mapper.AiChatMessageMapper">

    <resultMap id="AiChatMessageMap" type="com.yumyumcoach.domain.ai.chat.entity.AiChatMessage">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="messageDate" column="message_date"/>
        <result property="sender" column="sender"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insertMessages" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_chat_messages (email, message_date, sender, content, created_at)
        VALUES
        <foreach collection="messages" item="msg" separator=",">
            (#{msg.email}, #{msg.messageDate}, #{msg.sender}, #{msg.content}, #{msg.createdAt})
        </foreach>
    </insert>

    <select id="findByEmailAndDate" resultMap="AiChatMessageMap">
        SELECT id, email, message_date, sender, content, created_at
        FROM ai_chat_messages
        WHERE email = #{email}
          AND message_date = #{messageDate}
        ORDER BY created_at ASC
    </select>

</mapper>
